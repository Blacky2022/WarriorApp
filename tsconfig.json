{
	"compilerOptions": {
		"noImplicitAny": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"target": "ES6",
		"downlevelIteration": true,
		"lib": ["es6", "DOM"],
		"module": "commonjs",
		"outDir": ".dist",
		"types": ["handlebars"],
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true
	}
}
